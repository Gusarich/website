#!/bin/sh
# Pre-commit hook: bump cache-busting ?v= tokens site-wide
set -e
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Run the updater; generate a fresh version per commit
python3 "$REPO_ROOT/tools/update_asset_versions.py" --verbose || true

# Re-stage updated tracked files
git add -u

exit 0

